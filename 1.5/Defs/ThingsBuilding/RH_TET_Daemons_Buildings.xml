			<drawSize>1.6</drawSize>
		</graphicData>
		<building>
			<combatPower>500</combatPower>
		</building>
		<comps>
			<li Class="CompProperties_SpawnerPawn">
				<spawnablePawnKinds>
					<li>RH_TET_Daemons_Horror_Blue</li>
