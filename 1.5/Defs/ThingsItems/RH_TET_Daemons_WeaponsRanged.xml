<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="BaseWeapon">
		<defName>RH_TET_Daemons_RitualKnife_Pink</defName>
		<label>daemon ritual knife high</label>
		<description>A ritual knife of the god Tzeentch, carried by his lesser daemons: Pink Horrors. Good for cutting, stabbing, and slicing, but an awful aura looms around it. It does launch a magic projectile.</description>
		<graphicData>
			<texPath>Things/Item/Weapon/Melee/TzeenchianBlade</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.0</drawSize>
		</graphicData>
		<uiIconScale>1.6</uiIconScale>
		<techLevel>Medieval</techLevel>
		<weaponTags>
			<li>RH_TET_Daemons_Tzeentch_Horror_Pink</li>
		</weaponTags>
		<statBases>
			<Mass>0.5</Mass>
			<MarketValue>500</MarketValue>
		</statBases>
		<!--<equippedAngleOffset>-30</equippedAngleOffset>-->
		<equippedStatOffsets>
			<SocialImpact>-0.35</SocialImpact>
			<PsychicSensitivity>-0.10</PsychicSensitivity>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>RH_TET_Daemons_WeaponsMelee</li>
		</thingCategories>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>RH_TET_Daemons_Tzeentch_Pink_Proj</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>25.9</range>
				<soundCast>RH_TET_Daemons_TzeentchFireSound</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>12</power>
				<cooldownTime>1.5</cooldownTime>
			</li>
			<li>
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>13</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponMelee</nameMaker>
				<descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
		<weaponClasses>
			<li>Neolithic</li>
		</weaponClasses>
		<relicChance>0</relicChance>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
	</ThingDef>

