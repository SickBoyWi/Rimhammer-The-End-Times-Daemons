	<VFECore.ExpandableProjectileDef ParentName="BaseBullet">
		<defName>RH_TET_Daemons_Flamer_Proj</defName>
		<label>fire of tzeentch</label>
		<thingClass>VFECore.FlamethrowProjectile</thingClass>
		<graphicData>
			<texPath>Things/Projectile/Tzeentch/FlameBlast/Proj_FlameGun</texPath>
			<texPathFadeOut>Things/Projectile/Tzeentch/FlameBlast/Proj_FlameGunFadeOut</texPathFadeOut>
			<shaderType>MoteGlow</shaderType>
		</graphicData>
		<projectile>
			<damageDef>Flame</damageDef>
			<speed>40</speed>
			<damageAmountBase>2</damageAmountBase>
			<explosionRadius>0.6</explosionRadius>
