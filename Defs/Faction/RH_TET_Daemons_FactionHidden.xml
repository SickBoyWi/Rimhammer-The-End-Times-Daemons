			<points>
				<li>(35,     0)</li>
				<li>(100,   1)</li>
				<li>(1000, 5)</li>
				<li>(2000, 8)</li>
				<li>(4000, 10)</li>
			</points>
		</raidLootValueFromPointsCurve>
		<humanlikeFaction>false</humanlikeFaction>
		<hidden>true</hidden>
		<autoFlee>false</autoFlee>
		<canUseAvoidGrid>false</canUseAvoidGrid>
